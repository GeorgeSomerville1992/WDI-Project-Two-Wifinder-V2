.container
  .row
    .col-md-6
      .page-header
        %h1 All Users
      #table-responsive
        %table{class: "table table-striped table-hover"}
          %tr
            %th Name
            %th Email
            %th Friendship
            - @users.each do |user|
              - unless user == current_user
                %tr
                  %td= user.name
                  %td= user.email
                  - if user.is_friends_with?(current_user)
                    %td
                      %button.btn.btn-default.btn-block{disabled: "disabled", type: "button"} Friends
                  - else
                    %td
                      = link_to "Add Friend", befriend_user_path(user), class: "btn btn-primary btn-block", type: "button"
  %br/
